{% extends 'base.html.twig' %}

{% block nav_title %}<i class="fas fa-graduation-cap"></i>&nbsp;&nbsp;Platform - AGS line item creation{% endblock %}

{% block body %}
<div class="card bg-light">
    <div class="card-header">
        <i class="fas fa-graduation-cap"></i>&nbsp;Create line item
    </div>
    <div class="card-body">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-row">
            <div class="col-md-4">
                {{ form_row(form.line_item_id) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.line_item_label) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.line_item_score_maximum) }}
            </div>
        </div>
    </div>
    <div class="card-footer">
        {{ form_widget(form.submit) }}
        <a href="{{ path('platform_ags_list_line_items') }}" class="btn btn-secondary"><i class="fas fa-undo-alt"></i>&nbsp;Cancel</a>
    </div>
    {{ form_end(form) }}
</div>
{% endblock body %}
