<br/>
<div class="card bg-light">
    <div class="card-body">
        <ul class="nav nav-tabs nav-fill nav-hover" id="nrpsTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="nrps-members-tab" data-toggle="tab" href="#nrps-members" role="tab" aria-controls="nrps-members" aria-selected="true">
                    <i class="fas fa-users"></i>&nbsp;Members
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nrps-details-tab" data-toggle="tab" href="#nrps-details" role="tab" aria-controls="nrps-details" aria-selected="false">
                    <i class="fas fa-info-circle"></i>&nbsp;Details
                </a>
            </li>
        </ul>
        <div class="tab-content" id="tabContent">
            <div class="tab-pane fade show active" id="nrps-members" role="tabpanel" aria-labelledby="nrps-members-tab">
                <table class="table table-bordered">
                    <thead class="thead-light">
                    <tr>
                        <th scope="col">Status</th>
                        <th scope="col">Identifier</th>
                        <th scope="col">Name</th>
                        <th scope="col">Roles</th>
                        <th scope="col">View</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for member in membership.members %}
                        <tr>
                            <td style="width: 3%" class="table-{{ member.status == 'Active' ? 'success' : 'danger' }}">{{ member.status }}</td>
                            <td><code>{{ member.userIdentity.identifier }}</code></td>
                            <td>{{ member.userIdentity.name }}</td>
                            <td>{{ member.roles|join(', ') }}</td>
                            <td style="width: 3%">
                                <button class="btn btn-primary btn-sm" role="button" data-toggle="modal" data-target="#nrpsMemberModal" data-nrps="{{ member.properties|json_encode(constant('JSON_PRETTY_PRINT') + constant('JSON_UNESCAPED_SLASHES')) }}">
                                    <i class="fas fa-external-link-alt"></i>
                                </button>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <th scope="row" colspan="5">No members found</th>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="tab-pane fade" id="nrps-details" role="tabpanel" aria-labelledby="nrps-details-tab">
                <dl class="list-unstyled">
                    <dt>Identifier</dt>
                    <dd><code>{{ membership.identifier }}</code></dd>
                    <dt>Context</dt>
                    <dd>
                        <ul>
                            <li><strong>Identifier:</strong> <code>{{ membership.context.identifier }}</code></li>
                            <li><strong>Label:</strong> {{ membership.context.label }}</li>
                            <li><strong>Title:</strong> {{ membership.context.title }}</li>
                        </ul>
                    </dd>
                    <dt>Relation Link</dt>
                    <dd>
                        {% if membership.relationLink %}
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <a class="btn btn-secondary" href="#" id="nrpsLinkUpdate" data-link="{{ membership.relationLink }}" title="Use url">
                                        <i class="fas fa-external-link-alt"></i>
                                    </a>
                                </div>
                                <input type="text" class="form-control" placeholder="token" value="{{ membership.relationLink }}" readonly>
                            </div>
                        {% else %}
                            <input type="text" class="form-control" placeholder="token" value="n/a" readonly>
                        {% endif %}
                        <small id="nrpsLinkUpdate_user_help" class="form-text text-muted">
                            Has next: <span class="badge badge-{{ membership.hasNext ? 'success' : 'secondary' }}">{{ membership.hasNext ? 'yes' : 'no' }}</span>,&nbsp;
                            has differences: <span class="badge badge-{{ membership.hasDifferences ? 'success' : 'secondary' }}">{{ membership.hasDifferences ? 'yes' : 'no' }}</span>
                        </small>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<script>
    $("#nrpsLinkUpdate").click(function(){
        $("#nrpsUrl").val($("#nrpsLinkUpdate").data("link"));
    });
</script>

