<div class="card bg-light">
    <div class="card-header">
        <i class="fas fa-user"></i>&nbsp;User
    </div>
    <div class="card-body">
        {% if token.payload.userIdentity %}
            <div class="row">
                <div class="col-md-6">
                    <dl class="list-unstyled">
                        <dt>Identifier</dt>
                        <dd><code>{{ token.payload.userIdentity.identifier }}</code></dd>
                        <dt>Name</dt>
                        <dd>{{ token.payload.userIdentity.name|default('n/a') }}</dd>
                        <dt>Email</dt>
                        <dd>{{ token.payload.userIdentity.email|default('n/a') }}</dd>
                        <dt>Given name</dt>
                        <dd>{{ token.payload.userIdentity.givenName|default('n/a') }}</dd>
                        <dt>Family name</dt>
                        <dd>{{ token.payload.userIdentity.familyName|default('n/a') }}</dd>
                        <dt>Middle name</dt>
                        <dd>{{ token.payload.userIdentity.middleName|default('n/a') }}</dd>
                        <dt>Locale</dt>
                        <dd>{{ token.payload.userIdentity.locale|default('n/a') }}</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="list-unstyled">
                        <dt>Picture</dt>
                        <dd>
                            {% if token.payload.userIdentity.picture %}
                                <img
                                        src="{{ token.payload.userIdentity.picture }}"
                                        class="img-thumbnail rounded"
                                        alt="{{ token.payload.userIdentity.picture }}"
                                        height="350"
                                        width="350"
                                />
                            {% else %}
                                n/a
                            {% endif %}
                        </dd>
                    </dl>
                </div>
            </div>
        {% else %}
            <div class="alert alert-dark" role="alert">
                <i class="fas fa-user-secret"></i>&nbsp;Anonymous User
            </div>
        {% endif %}
    </div>
</div>
<br/>
<div class="card bg-light">
    <div class="card-header">
        <i class="fas fa-user-tag"></i>&nbsp;Roles <small>(at launch)</small>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                {% if token.payload.roles is not empty  %}
                    <dl class="list-unstyled">
                        {% for role in token.payload.roles  %}
                            <dd><code>{{ role }}</code></dd>
                        {% endfor %}
                    </dl>
                {% else %}
                    <div class="alert alert-dark" role="alert">
                        <i class="fas fa-ban"></i>&nbsp;No roles provided
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

